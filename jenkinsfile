pipeline { 
    environment { 
        registry = "shreyashkumarp/flaskapp" 
        registryCredential = 'dockerid' 
        dockerImage = '' 
    }
    agent any 

    stages { 
        
        stage('working dir') { 
            steps { 
                sh "pwd" 
            }
        } 
        
        stage('Cloning our Git') { 
            steps { 
                git branch:'main', url: 'https://github.com/shreyashkumarp98/Pythonflaskapp.git' 
            }
        } 
         stage('working dir 1') { 
            steps { 
                sh "pwd" 
            }
        }
        stage('Security Checks') { 
            steps { 
                sh 'docker run --user $(id -u):$(id -g) -v $(pwd):/src --rm secfigo/bandit bandit -r /src -f json -o /src/bandit-output.json | exit 0'
            }
        }
        stage('Building our image') { 
            steps { 
                script { 
                    dockerImage = docker.build registry + ":$BUILD_NUMBER" 
                }
            }
        } 
         stage('working dir 2') { 
            steps { 
                sh "pwd" 
            }
        }
        stage('Deploy our image') { 
            steps { 
                script { 
                    docker.withRegistry( '', registryCredential ) { 
                        dockerImage.push() 
                    }
                } 
            }
        } 
        stage('Cleaning up') { 
            steps { 
                sh "docker rmi $registry:$BUILD_NUMBER" 
            }
        }
        stage('Deploy to Kubeernates Dev') { 
            steps { 
                echo "Deploy using kubectl"
                sh "sed -i 's/TAG/$BUILD_NUMBER/g' python-flask-deployment.yml" 
                sh "kubectl apply -f python \-flask-deployment.yml"
            }
        }
    }
    post {
        always{
            archieveArtifacts artifacts: 'bandit-output.json'. onlyIfSuccessfull: True
        }
    }

}